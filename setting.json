{
    "workbench.colorTheme": "Material Theme Darker",
    "windsurf.cascadeOpenOnReload": false,
    "windsurf.enableAutocomplete": true,
    "remote.windsurfSSH.configFile": "~/.ssh/config",
    // "editor.fontFamily": "Cascadia Code",
    "editor.fontFamily": "CaskaydiaCove Nerd Font",
    "editor.wordWrap": "on",
    "editor.guides.bracketPairs": "active",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "git.enableSmartCommit": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "workbench.preferredHighContrastColorTheme": "Monokai",
    "terminal.integrated.tabs.defaultIcon": "history",
    "workbench.activityBar.iconClickBehavior": "focus",
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "workbench.iconTheme": "material-icon-theme",
    "git.autofetch": true,
    "editor.matchBrackets": "near",
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.terraform/**": true,
        "**/.terraform.lock.hcl": true,
        "**/.terraform.tfstate": true
    },
    "git.confirmSync": false,
    "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font",
    "editor.inlineSuggest.enabled": true,
    "editor.cursorSurroundingLinesStyle": "all",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "expand",
    "editor.cursorStyle": "line",
    // "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss19', 'ss20'",
    "editor.fontLigatures": true,
    "workbench.sideBar.location": "right",
    "python.createEnvironment.trigger": "off",
    "catppuccin.accentColor": "pink",
    "editor.tabCompletion": "on",
    "editor.fontSize": 14,
    "editor.cursorWidth": 10,
    "editor.lineHeight": 2,
    "editor.autoIndent": "advanced",
    "editor.fontWeight": "600",
    "editor.tokenColorCustomizations": {
    "textMateRules": [
    {
        "scope": [
            "comment",
            "entity.name.type.class", 
            "constant", 
            "storage.modifier", 
            "storage.type.class.js", 
            "keyword",
            "variable",
            "string.quoted",
            "support.class",
            "support.type",
            "string",
            "comment.line",
            "comment.block",
        ],
        "settings": {
            "fontStyle": "italic bold"
        }
    },
    {
        "scope": [
            "invalid",
            "keyword.operator",
            "constant.numeric.css",
            "keyword.other.unit.px.css",
            "constant.numeric.decimal.js",
            "constant.numeric.json"
        ],
        "settings": {
            "fontStyle": "italic"
        }
        }
    ]
    },
    "editor.lineNumbers": "relative",
    "code-runner.runInTerminal": false,
    "windsurf.enableSupercomplete": false,
}
